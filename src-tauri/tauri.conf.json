{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "text-edit",
  "version": "0.1.0",
  "identifier": "com.hxl.text-edit",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "捡书",
        "width": 1024,
        "height": 768,
        "decorations": false
      }
    ],
    "security": {
      "csp": {}
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
